{
  "extends": "stylelint-config-standard",
  "rules": {
    "indentation": 2,
    "at-rule-no-unknown": [
      true, {
        "ignoreAtRules": [
          "mixin",
          "include",
          "extend"
        ]
      }
    ],
    "value-keyword-case": [
      lower, {
        "ignoreKeywords": [
          "Menlo",
          "Neue",
          "BlinkMacSystemFont",
          "Helvetica",
          "Arial",
          "Courier",
          "New",
        ]
      }
    ],
    "no-descending-specificity": null,
  }
}